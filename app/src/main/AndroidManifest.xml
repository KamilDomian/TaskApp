<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:andoid="http://schemas.android.com/apk/distribution">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:name=".TasksAplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_tasks_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_tasks_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskApp"
        tools:targetApi="31">
        <activity
            android:name=".TaskActivity"
            android:exported="true"
            android:label="@string/title_activity_task"
            android:theme="@style/Theme.TaskApp">
        </activity>
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TaskApp" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TaskApp">


        </activity>
    </application>

</manifest>